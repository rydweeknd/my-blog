<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%= post.image %>" class="ui centered rounded image">
            <div class="content">
                <strong style="margin: 10px auto;"><%= post.created_at.toDateString() %></strong>
            </div>
            <div class="description">
                <p><%- post.content %></p>
            </div>
            <a class="ui orange basic button" href="/blogs/<%= post._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>